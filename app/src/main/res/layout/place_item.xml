<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="27dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <TextView android:id="@+id/place_name"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginVertical="10dp"
                  android:layout_marginStart="30dp"
                  android:paddingEnd="10dp"
                  android:text="@string/place_name"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  android:ellipsize="end"
                  android:maxLines="1"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toLeftOf="@id/add"
                  tools:ignore="RtlSymmetry"/>

        <TextView android:id="@+id/address"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="30dp"
                  android:paddingEnd="10dp"
                  android:text="@string/place_name"
                  android:textSize="12sp"
                  android:ellipsize="end"
                  android:maxLines="1"
                  app:layout_constraintRight_toLeftOf="@id/add"
                  app:layout_constraintTop_toBottomOf="@id/place_name"
                  app:layout_constraintLeft_toLeftOf="parent"
                  tools:ignore="RtlSymmetry"/>

        <Button android:id="@+id/add"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/add_circle"
                app:layout_constraintTop_toTopOf="@id/place_name"
                app:layout_constraintBottom_toBottomOf="@id/address"
                app:layout_constraintRight_toRightOf="parent"/>

        <TextView android:id="@+id/dividingLine"
                  android:layout_width="match_parent"
                  android:layout_height="20dp"
                  app:layout_constraintTop_toBottomOf="@id/address"/>

        <TextView android:id="@+id/today_text"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="@string/today"
                  android:textSize="16sp"
                  android:textAlignment="center"
                  app:layout_constraintWidth_percent="0.33"
                  app:layout_constraintTop_toBottomOf="@id/dividingLine"
                  app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView android:id="@+id/tomorrow_text"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="@string/tomorrow"
                  android:textSize="16sp"
                  android:textAlignment="center"
                  app:layout_constraintWidth_percent="0.33"
                  app:layout_constraintTop_toBottomOf="@id/dividingLine"
                  app:layout_constraintLeft_toRightOf="@id/today_text"/>

        <TextView android:id="@+id/day_after_tomorrow_text"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="@string/day_after_tomorrow"
                  android:textSize="16sp"
                  android:textAlignment="center"
                  app:layout_constraintWidth_percent="0.33"
                  app:layout_constraintTop_toBottomOf="@id/dividingLine"
                  app:layout_constraintLeft_toRightOf="@id/tomorrow_text"/>

        <ImageView android:id="@+id/today_weather_icon"
                   android:layout_width="0dp"
                   android:layout_height="24dp"
                   android:layout_marginVertical="10dp"
                   android:src="@drawable/ic_clear_day"
                   app:layout_constraintWidth_percent="0.33"
                   app:layout_constraintTop_toBottomOf="@id/today_text"
                   app:layout_constraintLeft_toLeftOf="parent"
                   android:contentDescription="@string/icon"/>

        <ImageView android:id="@+id/tomorrow_weather_icon"
                   android:layout_width="0dp"
                   android:layout_height="24dp"
                   android:layout_marginVertical="10dp"
                   android:src="@drawable/ic_clear_day"
                   app:layout_constraintWidth_percent="0.33"
                   app:layout_constraintTop_toBottomOf="@id/today_text"
                   app:layout_constraintLeft_toRightOf="@id/today_weather_icon"
                   android:contentDescription="@string/icon"/>

        <ImageView android:id="@+id/day_after_tomorrow_weather_icon"
                   android:layout_width="0dp"
                   android:layout_height="24dp"
                   android:layout_marginVertical="10dp"
                   android:src="@drawable/ic_clear_day"
                   app:layout_constraintWidth_percent="0.33"
                   app:layout_constraintTop_toBottomOf="@id/today_text"
                   app:layout_constraintLeft_toRightOf="@id/tomorrow_weather_icon"
                   android:contentDescription="@string/icon"/>

        <TextView android:id="@+id/today_max"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginVertical="10dp"
                  android:text="@string/temperature"
                  android:textSize="16sp"
                  android:textAlignment="center"
                  app:layout_constraintWidth_percent="0.33"
                  app:layout_constraintTop_toBottomOf="@id/today_weather_icon"
                  app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView android:id="@+id/tomorrow_max"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginVertical="10dp"
                  android:text="@string/temperature"
                  android:textSize="16sp"
                  android:textAlignment="center"
                  app:layout_constraintWidth_percent="0.33"
                  app:layout_constraintTop_toBottomOf="@id/today_weather_icon"
                  app:layout_constraintLeft_toRightOf="@id/today_max"/>

        <TextView android:id="@+id/day_after_tomorrow_max"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginVertical="10dp"
                  android:text="@string/temperature"
                  android:textSize="16sp"
                  android:textAlignment="center"
                  app:layout_constraintWidth_percent="0.33"
                  app:layout_constraintTop_toBottomOf="@id/today_weather_icon"
                  app:layout_constraintLeft_toRightOf="@id/tomorrow_max"/>

        <TextView android:id="@+id/today_min"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginVertical="10dp"
                  android:text="@string/temperature"
                  android:textSize="16sp"
                  android:textAlignment="center"
                  app:layout_constraintWidth_percent="0.33"
                  app:layout_constraintTop_toBottomOf="@id/today_max"
                  app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView android:id="@+id/tomorrow_min"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginVertical="10dp"
                  android:text="@string/temperature"
                  android:textSize="16sp"
                  android:textAlignment="center"
                  app:layout_constraintWidth_percent="0.33"
                  app:layout_constraintTop_toBottomOf="@id/today_max"
                  app:layout_constraintLeft_toRightOf="@id/today_max"/>

        <TextView android:id="@+id/day_after_tomorrow_min"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginVertical="10dp"
                  android:text="@string/temperature"
                  android:textSize="16sp"
                  android:textAlignment="center"
                  app:layout_constraintWidth_percent="0.33"
                  app:layout_constraintTop_toBottomOf="@id/today_max"
                  app:layout_constraintLeft_toRightOf="@id/tomorrow_max"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/today_min"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>