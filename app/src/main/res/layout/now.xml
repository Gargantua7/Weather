<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/now"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:background="@drawable/bg_clear_day">

    <TextView
            android:id="@+id/currentTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temp_num"
            android:textColor="#fff"
            android:textSize="86sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <TextView android:id="@+id/temp_symbol"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="15dp"
              android:text="@string/temp_symbol"
              android:textColor="#fff"
              android:textSize="36sp"
              app:layout_constraintTop_toTopOf="@id/currentTemp"
              app:layout_constraintLeft_toRightOf="@id/currentTemp"/>

    <TextView
            android:id="@+id/currentSky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/sunny"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="@id/temp_symbol"
            app:layout_constraintBaseline_toBaselineOf="@id/currentTemp"/>

    <TextView android:id="@+id/aqi"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/aqi"
              android:textStyle="bold"
              android:textColor="#fff"
              android:textSize="16sp"
              app:layout_constraintTop_toBottomOf="@id/currentTemp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>